<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout

        android:id="@+id/player1linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/player1card1"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />

            <ImageView
                android:id="@+id/player1card2"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />


        </LinearLayout>
        <TextView
            android:id="@+id/player1name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 1" />

        <TextView
            android:id="@+id/player1stack"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 1 Stack" />

        <TextView
            android:id="@+id/player1action"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Action" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player2linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/player2name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 2" />

        <TextView
            android:id="@+id/player2stack"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 2 Stack" />

        <TextView
            android:id="@+id/player2action"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Action" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player2card1"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />

            <ImageView
                android:id="@+id/player2card2"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player4linear"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/player4card1"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />

            <ImageView
                android:id="@+id/player4card2"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />


        </LinearLayout>
        <TextView
            android:id="@+id/player4name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 4" />

        <TextView
            android:id="@+id/player4stack"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 4 Stack" />

        <TextView
            android:id="@+id/player4action"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Action" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/player3linear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/player3name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 3" />

        <TextView
            android:id="@+id/player3stack"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Player 3 Stack" />

        <TextView
            android:id="@+id/player3action"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Action" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player3card1"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />

            <ImageView
                android:id="@+id/player3card2"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pot"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/communitycard1"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />
            <ImageView
                android:id="@+id/communitycard2"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />
            <ImageView
                android:id="@+id/communitycard3"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />
            <ImageView
                android:id="@+id/communitycard4"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />
            <ImageView
                android:id="@+id/communitycard5"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/playingcardback" />

        </LinearLayout>
        <TextView
            android:id="@+id/raiseamount"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:hint="Raise"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_call"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="CALL"
                app:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btn_raise"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="RAISE"
                app:backgroundTint="#FFC107" />

            <Button
                android:id="@+id/btn_fold"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="FOLD"
                app:backgroundTint="#F10202" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>